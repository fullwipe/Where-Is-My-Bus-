<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <fullwipe.ciriitc.whereismybus.utilities.CustomTextView
            android:id="@+id/tvresponso"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Richiesta in corso..."
            android:textSize="25sp"
            android:elevation="30dp" />

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:contentDescription="Attendere prego" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/aggiorna_grtd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/m_aggiorna"
            android:src="@anim/grtd_refresh"
            android:contentDescription="Aggiorna"
            android:elevation="5dp" />

        <ImageButton
            android:id="@+id/salgo_grtd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/m_salgo"
            android:src="@anim/grtd_salgo"
            android:contentDescription="Salgo sul bus"
            android:elevation="5dp" />

        </LinearLayout>

</LinearLayout>
