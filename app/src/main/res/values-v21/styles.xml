<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff1e1e1e</item>
        <item name="colorPrimaryDark">#ff727272</item>
        <item name="colorAccent">#ff1000ff</item>
        <item name="android:colorButtonNormal">#ffaec7d1</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.Material.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Material.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
